---
import { Image } from "astro:assets";
import pokedexLogo from "../assets/pokedex_logo.webp";
--- 
<header class="header">
    <div class="logo">
        <a href="/">
            <Image src={pokedexLogo} alt="Pokedex logo" width={300} height={100} loading="lazy" />
        </a>
    </div>
    <nav>
        <ul>
            <li><a href="/">Inicio</a></li>
            <li><a href="/about">Acerca de</a></li>
        </ul>
    </nav>
</header>

<style>
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        background: #ef5350;
        color: #fff;
        border-radius: 100px;
    }
    .header .logo img {
        width: 300px;
        height: auto;
    }
    nav ul {
        list-style: none;
        display: flex;
        gap: 1rem;
        margin: 0;
        padding: 0;
    }
    nav a {
        color: #fff;
        text-decoration: none;
        font-weight: bold;
        padding: 2rem 2rem;
        font-size: 2rem;
    }
    nav a:hover {
        background-color: #fff;
        color: #ef5350;
        border-radius: 100px;
    }
</style>